<h1>{{formtitle}}</h1>
<hr>

<script>
  function validateForm() {
    var x = document.forms["blogform"]["title"].value;
    if (x == "") {
        alert("Title must be filled out");
        return false;
    }
  }
</script>
<div class="blog-post col-xs-9">
    <form name="blogform" method="post" action="{{action}}"  onsubmit="return validateForm()"
        role="form" class="form-horizontal">
        <input type="hidden" name="locator" value="{{locator}}">
        <input type="hidden" name="Lang" value="{{language}}">
        {{#if url}}
            <p class="blog-post-meta">
                URL: <input id="url" type="text" name="url" value="{{url}}" class="form-control">
            </p>
        {{/if}}
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input id="title" type="text" name="title" value="{{title}}" placeholder="Enter the title" class="form-control">
            </div>
        </div>
        <div class="form-group">
          <label for="editor1" class="col-sm-2 control-label">Body</label>
          <div class="col-sm-10">
            <textarea name="body" id="editor1" >{{{body}}}</textarea>
            <script>
              CKEDITOR.replace( 'editor1' );
            </script>
          </div>
        </div>
        {{#if isNotEdit}}
            {{> tag_form}}
        {{/if}}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Save</button>&nbsp;<a href="/" title="cancel" class="btn">Cancel</a>
            </div>
        </div>
    </form>
</div>
